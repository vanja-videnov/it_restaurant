<div class="row text-center">
  <br/><br/>

  <div class="col-sm-2">
    <i><b>Name</b></i>
  </div>
  <div class="col-sm-2 col-sm-offset-1">
    <i><b>Email</b></i>
  </div>
  <div class="col-sm-2 col-sm-offset-1">
    <i><b>Telephone</b></i>
  </div>
  <div class="col-sm-3 col-sm-offset-1">
    <i><b>Options</b></i>
  </div>
  <br/><br/> <br/><br/>
</div>
<% if @users %>
    <% @users.each do |u| %>
        <div class="row text-center">
          <div class="col-sm-2 background-white">
            <%= u.name %>
          </div>
          <div class="col-sm-2 col-sm-offset-1 background-white">
            <%= u.email %>
          </div>
          <div class="col-sm-2 col-sm-offset-1 background-white">
            <%= u.telephone %>
          </div>
          <div class="col-sm-3 col-sm-offset-1">
            <%= link_to 'Show', user_path(id: u.id), class: "btn btn-primary" %>&nbsp;&nbsp;
            <%= link_to 'Edit', edit_user_path(id: u.id), class: "btn btn-primary" %>&nbsp;&nbsp;
            <%= link_to 'Delete', manager_user_path(id: u.id), method: :delete, class: "btn btn-primary" %>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <hr/>
            </div>
          </div>
        </div>
    <% end %>
<% end %>