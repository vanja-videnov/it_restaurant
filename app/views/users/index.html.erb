<% if @users %>
    <table class="table table-hover">
      <thead class="bg-table-header">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Telephone</th>
        <th>Options</th>
      </tr>
      </thead>

      <tbody class="table table-hover">
      <% @users.each do |u| %>
          <tr class="bg-table">
            <td><%= u.name %> &nbsp;&nbsp;</td>
            <td><%= u.email %> &nbsp;&nbsp;<br/></td>
            <td><%= u.telephone %></td>
            <td>
              <%= link_to 'Show', user_path(id: u.id) %>&nbsp;&nbsp;
              <%= link_to edit_user_path(id: u.id) do %> <span class="glyphicon glyphicon-pencil"></span>
              <% end %>&nbsp;&nbsp;
              <%= link_to manager_user_path(id: u.id), method: :delete do %>
                  <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>


      <% end %>
      </tbody>
    </table>
<% end %>