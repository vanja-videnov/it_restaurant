<div class="row text-center">
  <br/><br/>

  <div class="col-sm-3">
    <i><b>Name</b></i>
  </div>
  <div class="col-sm-3 col-sm-offset-1">
    <i><b>Email</b></i>
  </div>
  <div class="col-sm-3 col-sm-offset-1">
    <i><b>Telephone</b></i>
  </div>
  <br/><br/> <br/><br/>
</div>
<div class="row text-center">
  <div class="col-sm-3 background-white">
    <%= @user.name %>
  </div>
  <div class="col-sm-3 col-sm-offset-1 background-white">
    <%= @user.email %>
  </div>
  <div class="col-sm-3 col-sm-offset-1 background-white">
    <%= @user.telephone %>
  </div>
</div>

<% if logged_in? && is_manager? %>
    <div class="row text-center">
      <br/> <br/>
      <div class="col-sm-5 col-sm-offset-3 ">
        <%= link_to 'Edit', edit_user_path(id: @user.id), class: "btn btn-lg btn-primary" %> &nbsp; &nbsp;&nbsp; &nbsp;
        <%= link_to 'Delete', manager_user_path(id: @user.id), method: :delete, class: "btn btn-lg btn-primary" %>
      </div>
    </div>
<% end %>