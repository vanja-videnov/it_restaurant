<% if @tables.present? %>
    <p class="text-center"><b>Existing tables:</b></p>
    <% @tables.each_slice(5) do |slice| %>
        <div class="row ">
          <% slice.each do |u| %>
              <% if u.payment %>
                  <div class="col-sm-1 col-sm-offset-1 text-center pagination-centered background-white"><%= u.number %> &nbsp;&nbsp;
                    <%= link_to image_tag('table.png', width: '100%'), table_path(id: u.id), :title => u.sum %>
                  </div>
              <% else %>
                  <div class="col-sm-1 col-sm-offset-1 text-center pagination-centered background-white"><%= u.number %> &nbsp;&nbsp;
                    <%= link_to image_tag('table-red.png', width: '100%'), table_path(id: u.id), :title => u.sum %>
                  </div>
              <% end %>
          <% end %>
        </div>
        <br/>
        <br/>
    <% end %>
<% end %>
<br/>
<div class="row ">
  <div class="col-sm-4 col-sm-offset-4">
    <%= form_for(:table, html: {class: 'form'}, url: tables_path) do |f| %>
        <div class="form-group">
          <%= f.label :number %>
          <%= f.text_field :number, required: true, type: 'number', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Save table", class: "btn form-control btn-primary" %>
        </div>
    <% end %>
    <br/>
  </div>
</div>
<%= link_to 'Back', manager_index_path %>