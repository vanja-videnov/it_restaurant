<table width="100%">
  <tr>
    <td colspan="4"><%= link_to 'Add table', new_table_path, class: "btn btn-primary" if current_user.manager? %></td>
  </tr>
  <% if @tables %>
      <% @tables.each_slice(4) do |slice| %>
          <tr>
            <% slice.each do |u| %>
                <td align="center"><%= u.number %> &nbsp;&nbsp;
                  <% if u.payment %>
                      <%= link_to image_tag('table.png', size: "200"), table_path(id: u.id), :title => u.sum %>
                  <% else %>
                      <%= link_to image_tag('table-red.png', size: "200"), table_path(id: u.id), :title => u.sum %>
                  <% end %>
                </td>
            <% end %>
          </tr>
      <% end %>
  <% end %>

</table>
<br/>