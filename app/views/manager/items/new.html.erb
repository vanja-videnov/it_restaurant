<%= form_for [:manager, @item], url: manager_menu_items_path(menu_id: @item.menu_id) do |f| %>  
    <% if @item.errors.any? %>   
        <div id="error_explanation">
                <h2>
                  <%= pluralize(@item.errors.count, "error") %> prohibited
                  this item from being saved:
                </h2>
          <ul>        
            <% @item.errors.full_messages.each do |msg| %>          
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :subcategory %><br>
      <%= f.select :subcategory, Subcategory.all.collect { |u| [u.name, u.id] }, required: true %>
    </p>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true %>
    </p>
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, required: true %>
    </p>
    <p>
      <%= f.label :price %><br>
      <%= f.text_field :price, type: 'number', required: true %>
    </p>
    <p>
      <%= f.submit class: "btn btn-primary" %>
    </p>
     
<% end %>
 
<%= link_to 'Back', edit_manager_menu_path(id: @item.menu_id) %>