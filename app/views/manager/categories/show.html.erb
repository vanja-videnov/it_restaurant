<% if @category %>
    <table class="table ">
      <tr style="border-bottom: hidden;border-top: hidden">
        <td><b>Name:</b>&nbsp;<%= @category.name %>&nbsp;&nbsp;&nbsp;&nbsp;
          <%= link_to 'Edit', edit_manager_category_path(id: @category.id), class: "btn btn-primary" %>&nbsp;&nbsp;
          <%= link_to 'Delete', manager_category_path(id: @category.id), method: :delete, class: "btn btn-primary" %>&nbsp;&nbsp;
          <%= link_to 'New subcategory', new_manager_category_subcategory_path(category_id: @category), class: "btn btn-primary" %>
        </td>
      </tr>
    </table>
    <table class="table table-hover">
      <% if @category.subcategories.present? %>
          <tbody>
          <tr style="border-top: hidden">
            <th>
              <b><i>Subcategories:</i></b> &nbsp;&nbsp;
            </th>
          </tr>
          <% @category.subcategories.each do |u| %>
              <tr style="text-align: left">
                <td>*<%= u.name %>&nbsp;&nbsp;&nbsp;&nbsp;
                  <%= link_to 'Edit', edit_manager_category_subcategory_path(id: u.id, category_id: @category) %>
                  &nbsp;&nbsp;
                  <%= link_to 'Delete', manager_category_subcategory_path(id: u.id, category_id: @category), method: :delete, class: "btn btn-primary" %>
                </td>
              </tr>
          <% end %>
          </tbody>
      <% end %>
    </table>

<% end %>
<br/>
<%= link_to '<- Back', menus_path %>