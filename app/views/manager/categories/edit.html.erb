<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <%= form_for :category, html: {class: 'form'}, url: manager_category_path(id: @category), method: :patch do |f| %>
          
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary form-control" %>
        </div>
         
    <% end %>
  </div>
</div>

<%= link_to '<- Back to category', manager_category_path(id: @category) %>