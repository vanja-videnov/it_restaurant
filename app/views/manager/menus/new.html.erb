<div class="row well">
  <div class="col-sm-4 col-sm-offset-4">
<h1>Create menu</h1>

<% if @menu.errors.any? %>   
    <div id="error_explanation">
            <h2>
              <%= pluralize(@menu.errors.count, "error") %> prohibited
              this menu from being saved:
            </h2>
      <ul>        
        <% @menu.errors.full_messages.each do |msg| %>          
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<%= form_for [:manager, @menu], html: {class: 'form'} do |f| %>  
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
      <div class="form-group">
      <%= f.label :date %><br>
      <%= f.date_select :date, :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }  %>
    </div>
        <div class="form-group">
      <%= f.submit class: "btn btn-primary form-control" %>
    </div> 
<% end %>
