<% if @per_items %>
<b>Per items:</b><br/>
<% @per_items.each do |report,count| %>
    <%= @all.find_by(item_id: report).item.name %>
    Count:<%= count%>
    <br/>
<% end %><hr/>
<% end%>

<% if @per_table %>
    <b>Per tables:</b><br/>
    <% @per_table.each do |report| %>
        Table:<%= report.table.number %>
        Item:<%= report.item.name%>
        <br/>
    <% end %>
    <hr/>
    <b>Number of items per table:</b>
    <br/>
    <% @item_per_table.each do |t,c| %>
        Table:<%= t %> /
        <%= c %> item(s)
        <br/>
    <% end %>
    <hr/>
<% end%>

<% if @per_category %>
    <b>Categories per table:</b>
    <br/>
    <% @per_category.each do |t,c| %>
        Table:<%= t.first %> / Category:<%= @all.find_by(category_id:t.second).category.name %> ->
        <%= c %> item(s)
        <br/>
    <% end %>
<%end%>