<% if @categories %>
    <table width="100%" class="table">
      <thead>
      <tr>
        <% @categories.each do |o| %>
            <th><%= o.name %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <tr>
        <% @categories.each do |o| %>
            <td>
              <% o.subcategories.each do |s| %>
                  <% if s.items.count>0 %>
                      <table class="table table-hover">
                        <thead>
                        <tr >
                          <th class="background" colspan="2"><i><%= s.name if s.items.count>0 %></i></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% s.items.each do |i| %>
                            <tr>
                              <td>
                                <%= i.name %>
                              </td>
                              <td width="30%">
                                <%= link_to 'Add', table_order_order_menu_items_path(table_id: @table.id, order_id: @order.id, item_id: i.id), method: :post %>
                              </td>
                            </tr>
                        <% end %>
                        </tbody>
                      </table>
                  <% end %>
              <% end %>
            </td>
        <% end %>
      </tr>
      </tbody>
    </table>
<% end %>

<%= link_to 'Save order', table_path(id: @table), class: "btn btn-primary form-control" %>