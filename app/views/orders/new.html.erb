<% if @categories %>
    <table width="100%" class="table table-hover">
      <thead>
      <tr>
        <% @categories.each do |o| %>
            <th><%= o.name %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <tr>
        <% @categories.each do |o| %>
            <td>


              <% o.subcategories.each do |s| %>
                  <% if s.items.count>0 %>
                      <table class="table table-hover">
                        <thead>
                        <tr>
                          <th><i><%= s.name if s.items.count>0 %></i></th>
                          <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% s.items.each do |i| %>
                            <tr>
                              <td>
                                <%= i.name %>
                              </td>
                              <td width="30%">
                                <%= link_to 'Add', table_order_order_menu_items_path(table_id: @table.id, order_id: @order.id, item_id: i.id), method: :post %>
                              </td>
                            </tr>
                        <% end %>
                        </tbody>
                      </table>
                  <% end %>
              <% end %>


            </td>

        <% end %>
      </tr>
      </tbody>
    </table>
<% end %>







<% if false %>
    <table>
      <tr>
        <th>Name</th>
      </tr>
      <% @items.each do |u| %>
          <tr>
            <td><%= u.name %> &nbsp;&nbsp;</td>

            <td>
              <%= link_to 'Add', table_order_order_menu_items_path(table_id: @table.id, order_id: @order.id, item_id: u.id), method: :post %>
            </td>
          </tr>

      <% end %>

    </table>
<% end %>
