<% if @orders %>
    <% @orders.each_slice(3) do |slice| %>
        <div class="row">

          <% slice.each do |u| %>
              <div class="col-sm-3">
                <div class="row ">
                  <div class="col-sm-12">
                    <%= link_to image_tag('table-red.png', width: '70%'), table_path(id: u.table.id), :title => u.table.sum %>
                    <i>Table:<%= u.table.number %></i>
                  </div>
                </div>
                <div class="row bg-table">
                  <div class="col-sm-12">
                    <% u.order_menu_items.each do |o| %>
                        <div class="row hover-div"><br/>

                          <div class="col-sm-10">
                            *<%= o.item.name %>
                          </div>
                          <div class="col-sm-1">
                            <%= o.quantity %>
                          </div>
                        </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="col-sm-1">&nbsp;</div>
          <% end %>

        </div>
    <% end %>

<% end %>
