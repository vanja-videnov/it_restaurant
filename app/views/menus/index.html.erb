<% if is_manager? %>
    <table class="table table-hover">
      <tbody>
      <tr>
        <td>
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Menu list:</th>
              <th><%= link_to 'New', new_manager_menu_path %></th>
            </tr>
            </thead>
            <% if @menus %>
                <tbody>
                <% @menus.each do |u| %>
                    <tr>
                      <td>* <%= u.date %></td>
                      <td>
                        <%= link_to 'Show', menu_path(id: u.id) %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
            <% end %>
          </table>
        </td>
        <td>
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Categories:</th>
              <th><%= link_to 'New', new_manager_category_path %></th>
            </tr>
            </thead>
            <% if @categories %>
                <tbody>
                <% @categories.each do |u| %>
                    <tr>
                      <td>*<%= u.name %> &nbsp;&nbsp;</td>
                      <td>
                        <%= link_to 'Show', manager_category_path(id: u.id) %> &nbsp;&nbsp;
                        <%= link_to 'Delete', manager_category_path(id: u.id), method: :delete %>
                      </td>
                    </tr>
                <% end %>
                </tbody>
            <% end %>
          </table>
        </td>
      </tr>
      </tbody>
    </table>


<% else %>
    <% if @categories %>
        <table width="100%" class="table table-hover">
          <thead>
          <tr>
            <% @categories.each do |o| %>
                <th><%= o.name %></th>
            <% end %>
          </tr>
          </thead>
          <tbody>
          <tr>
            <% @categories.each do |o| %>
                <td>
                  <% o.subcategories.each do |s| %>
                      <% if s.items.count>0 %>
                          <table class="table table-hover">
                            <thead>
                            <tr>
                              <th><i><%= s.name if s.items.count>0 %></i></th>
                            </tr>
                            </thead>
                            <tbody>
                            <% s.items.each do |i| %>
                                <tr>
                                  <td>
                                    <%= i.name %>
                                  </td>
                                </tr>
                            <% end %>
                            </tbody>
                          </table>
                      <% end %>
                  <% end %>
                </td>
            <% end %>
          </tr>
          </tbody>
        </table>
    <% end %>
<% end %>

