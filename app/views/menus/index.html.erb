<% if flash[:error] -%>
    <p class='error'><%= h flash[:error] %></p>
<% end -%>
<% if is_manager? %>
    <div class="row">
      <div class="col-sm-5  ">
        <div class="row background">
          <br/>

          <div class="col-sm-9 "><i><b>Menu list:</b></i></div>
          <div class="col-sm-3 "><i><b><%= link_to 'New', new_manager_menu_path, class: 'btn btn-primary' %></b></i>
          </div>
          <br/><br/><br/>
        </div>
        <% if @menus %>

            <div class="col-sm-12  background-white ">
              <% @menus.each do |u| %>
                  <div class="row hover-div">
                    <br/>

                    <div class="col-sm-9 "><%= u.name if u.name.present? %>* <%= u.date %>&nbsp;&nbsp;
                      <%= link_to 'Show', menu_path(id: u.id) %></div>
                    <div class="col-sm-3 ">
                      <%= link_to 'Add item', new_manager_menu_item_path(menu_id: u.id) %>
                    </div>
                  </div>
              <% end %>
            </div>
        <% end %>
      </div>
      <div class="col-sm-6 col-sm-offset-1 ">
        <div class="row background">
          <br/>

          <div class="col-sm-5 "><i><b>Categories:</b></i></div>
          <div class="col-sm-6 col-sm-offset-1">
            <i><b><%= link_to 'New', new_manager_category_path, class: 'btn btn-primary' %></b></i></div>
          <br/><br/><br/>
        </div>
        <% if @categories %>
            <div class="row">
              <div class="col-sm-12  background-white ">
                <% @categories.each do |u| %>
                    <div class="row hover-div"><br/>

                      <div class="col-sm-5 ">*<%= u.name %> &nbsp;&nbsp; <%= link_to 'Show', manager_category_path(id: u.id) %></div>
                      <div class="col-sm-6 col-sm-offset-1 ">
                        <%= link_to 'Add subcategory', new_manager_category_subcategory_path(category_id: u.id) %>
                        &nbsp;&nbsp;
                        <%= link_to 'Delete', manager_category_path(id: u.id), method: :delete %>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <br/><br/>

      <div class="col-sm-5 col-sm-offset-3 ">
        <div class="row background">
          <br/>

          <div class="col-sm-3 "><i><b>Items:</b></i></div>
          <br/><br/>
        </div>
        <% if @items %>
            <div class="row">
              <div class="col-sm-12  background-white ">
                <% @items.each do |u| %>
                    <div class="row hover-div"><br/>

                      <div class="col-sm-9 ">*<%= u.name %> &nbsp;&nbsp; <%= link_to 'Edit', edit_manager_menu_item_path(menu_id: u.menu_id, id: u) %></div>
                      <div class="col-sm-3 ">
                        <%= link_to 'Delete', manager_menu_item_path(menu_id: u.menu_id, id: u), method: :delete %>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>


<% else %>
    <% if @categories %>
        <div class="row">
          <% @categories.each_slice(3) do |slice| %>
              <div class="row ">
                <% slice.each do |u| %>
                    <div class="col-sm-3">
                      <div class="row text-center"><i><b><%= u.name %></b></i><br/></div>
                      <div class="row">
                        <div class="col-sm-12">
                          <% u.subcategories.each do |p| %>
                              <% if p.items.present? %>
                                  <div class="row">
                                    <div class="col-sm-12">
                                      <div class="row"><br/>
                                        <i>&nbsp;&nbsp;<%= p.name %></i><br/>
                                      </div>
                                      <div class="row">
                                        <div class="col-sm-12 background-white">
                                          <% p.items.each do |i| %>
                                              <div class="row text-center"><br/>
                                                <div class="col-sm-12">
                                                  <%= i.name %>
                                                </div>
                                              </div>
                                          <% end %>
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                              <% end %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <div class="col-sm-1">&nbsp;</div>
                <% end %>
              </div>
              <br/><br/>
          <% end %>
        </div>
    <% end %>
<% end %>

