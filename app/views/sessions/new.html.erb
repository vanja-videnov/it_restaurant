<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <% provide(:title, "Log in") %>
    <h1>Log in</h1>
        <%= form_for(:session, url: login_path, html: {class: 'form'}) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
            <br/>

            <%= f.submit "Log in", class: "btn btn-primary form-control" %>
        <% end %>
  </div>
</div>